<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark>
  <benchmarkDirectory>local/data/tsp</benchmarkDirectory>
  <parallelBenchmarkCount>AUTO</parallelBenchmarkCount>
  <warmUpSecondsSpend>30</warmUpSecondsSpend>

  <inheritedSolverBenchmark>
    <problemBenchmarks>
      <!-- TODO replace xstreamAnnotatedClass with problemIO -->
      <xstreamAnnotatedClass>org.droolsplannerdelirium.travelingsanta.domain.TravelingSalesmanTour</xstreamAnnotatedClass>
      <inputSolutionFile>data/tsp/input/santa_cities.csv</inputSolutionFile>
      <problemStatisticType>BEST_SOLUTION_CHANGED</problemStatisticType>
    </problemBenchmarks>

    <solver>
      <solutionClass>org.droolsplannerdelirium.travelingsanta.domain.TravelingSalesmanTour</solutionClass>
      <planningEntityClass>org.droolsplannerdelirium.travelingsanta.domain.Visit</planningEntityClass>

      <scoreDirectorFactory>
        <scoreDefinitionType>HARD_AND_SOFT</scoreDefinitionType>
        <incrementalScoreCalculatorClass>org.droolsplannerdelirium.travelingsanta.solver.score.TspIncrementalScoreCalculator</incrementalScoreCalculatorClass>
      </scoreDirectorFactory>

      <termination>
        <maximumMinutesSpend>5</maximumMinutesSpend>
      </termination>
    </solver>
  </inheritedSolverBenchmark>

  <solverBenchmark>
    <name>tabuSearch</name>
    <solver>
      <!-- TODO remove this and start from initialized solution -->
      <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
      </constructionHeuristic>
      <localSearch>
        <unionMoveSelector>
          <changeMoveSelector>
            <cacheType>PHASE</cacheType>
            <selectionOrder>SHUFFLED</selectionOrder>
          </changeMoveSelector>
          <swapMoveSelector>
            <cacheType>PHASE</cacheType>
            <selectionOrder>SHUFFLED</selectionOrder>
          </swapMoveSelector>
        </unionMoveSelector>
        <acceptor>
          <solutionTabuSize>1000</solutionTabuSize>
          <planningEntityTabuSize>7</planningEntityTabuSize>
        </acceptor>
        <forager>
          <minimalAcceptedSelection>10000</minimalAcceptedSelection>
        </forager>
      </localSearch>
    </solver>
  </solverBenchmark>
</plannerBenchmark>
