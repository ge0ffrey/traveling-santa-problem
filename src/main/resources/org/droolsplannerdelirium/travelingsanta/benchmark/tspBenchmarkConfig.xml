<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark>
  <benchmarkDirectory>local/data/tsp</benchmarkDirectory>
  <parallelBenchmarkCount>AUTO</parallelBenchmarkCount>
  <warmUpSecondsSpend>30</warmUpSecondsSpend>

  <inheritedSolverBenchmark>
    <problemBenchmarks>
      <problemIOClass>org.droolsplannerdelirium.travelingsanta.persistence.TspProblemIO</problemIOClass>
      <inputSolutionFile>data/tsp/input/santa10.csv</inputSolutionFile>
      <inputSolutionFile>data/tsp/input/santa100.csv</inputSolutionFile>
      <inputSolutionFile>data/tsp/input/santa1000.csv</inputSolutionFile>
      <!--<inputSolutionFile>data/tsp/input/santa_cities.csv</inputSolutionFile>-->
      <writeOutputSolutionEnabled>true</writeOutputSolutionEnabled>
      <problemStatisticType>BEST_SOLUTION_CHANGED</problemStatisticType>
    </problemBenchmarks>

    <solver>
      <solutionClass>org.droolsplannerdelirium.travelingsanta.domain.TravelingSalesmanTour</solutionClass>
      <planningEntityClass>org.droolsplannerdelirium.travelingsanta.domain.Visit</planningEntityClass>

      <scoreDirectorFactory>
        <scoreDefinitionType>HARD_MEDIUM_SOFT</scoreDefinitionType>
        <incrementalScoreCalculatorClass>org.droolsplannerdelirium.travelingsanta.solver.score.TspIncrementalScoreCalculator</incrementalScoreCalculatorClass>
      </scoreDirectorFactory>

      <termination>
        <maximumHoursSpend>2</maximumHoursSpend>
      </termination>
    </solver>
  </inheritedSolverBenchmark>

  <solverBenchmark>
    <name>FF</name>
    <solver>
      <constructionHeuristic>
        <queuedEntityPlacer>
          <entitySelector>
            <cacheType>PHASE</cacheType>
          </entitySelector>
          <valuePlacer>
            <valueSelector>
              <planningVariableName>previousOdd</planningVariableName>
            </valueSelector>
          </valuePlacer>
        </queuedEntityPlacer>
      </constructionHeuristic>
      <constructionHeuristic>
        <queuedEntityPlacer>
          <entitySelector>
            <cacheType>PHASE</cacheType>
          </entitySelector>
          <valuePlacer>
            <valueSelector>
              <planningVariableName>previousEven</planningVariableName>
            </valueSelector>
          </valuePlacer>
        </queuedEntityPlacer>
      </constructionHeuristic>
    </solver>
  </solverBenchmark>
  <solverBenchmark>
    <name>FFD-lat-long</name>
    <solver>
      <constructionHeuristic>
        <queuedEntityPlacer>
          <entitySelector>
            <cacheType>PHASE</cacheType>
            <entityComparatorClass>org.droolsplannerdelirium.travelingsanta.domain.solver.LatitudeVisitDifficultyComparator</entityComparatorClass>
          </entitySelector>
          <valuePlacer>
            <valueSelector>
              <planningVariableName>previousOdd</planningVariableName>
            </valueSelector>
          </valuePlacer>
        </queuedEntityPlacer>
      </constructionHeuristic>
      <constructionHeuristic>
        <queuedEntityPlacer>
          <entitySelector>
            <cacheType>PHASE</cacheType>
            <entityComparatorClass>org.droolsplannerdelirium.travelingsanta.domain.solver.LongitudeVisitDifficultyComparator</entityComparatorClass>
          </entitySelector>
          <valuePlacer>
            <valueSelector>
              <planningVariableName>previousEven</planningVariableName>
            </valueSelector>
          </valuePlacer>
        </queuedEntityPlacer>
      </constructionHeuristic>
    </solver>
  </solverBenchmark>
  <solverBenchmark>
    <name>FFD-long-lat</name>
    <solver>
      <constructionHeuristic>
        <queuedEntityPlacer>
          <entitySelector>
            <cacheType>PHASE</cacheType>
            <entityComparatorClass>org.droolsplannerdelirium.travelingsanta.domain.solver.LongitudeVisitDifficultyComparator</entityComparatorClass>
          </entitySelector>
          <valuePlacer>
            <valueSelector>
              <planningVariableName>previousOdd</planningVariableName>
            </valueSelector>
          </valuePlacer>
        </queuedEntityPlacer>
      </constructionHeuristic>
      <constructionHeuristic>
        <queuedEntityPlacer>
          <entitySelector>
            <cacheType>PHASE</cacheType>
            <entityComparatorClass>org.droolsplannerdelirium.travelingsanta.domain.solver.LatitudeVisitDifficultyComparator</entityComparatorClass>
          </entitySelector>
          <valuePlacer>
            <valueSelector>
              <planningVariableName>previousEven</planningVariableName>
            </valueSelector>
          </valuePlacer>
        </queuedEntityPlacer>
      </constructionHeuristic>
    </solver>
  </solverBenchmark>
</plannerBenchmark>
